{%- if settings.badge_enable and product.compare_at_price > product.price -%}
<div class="badge"><span>{{ 'products.product.savings' | t }}<br/>
  {%- liquid
    if settings.badge_percentage_enable
      echo product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price | append: '%'
    else
      echo product.compare_at_price | minus: product.price | money_without_trailing_zeros
    endif
  -%}
  </span></div>
{%- endif -%}