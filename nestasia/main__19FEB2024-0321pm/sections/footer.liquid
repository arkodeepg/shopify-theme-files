        "label": "t:sections.section.settings.bottom_pad.label",
        "min": 0,
        "max": 60,
        "step": 10,
        "unit": "px",
        "default": 20
      },
      {
        "id": "margin_bottom_mobile",
        "type": "range",
        "label": "t:sections.section.settings.bottom_margin.label",
        "min": 0,
        "max": 60,
        "step": 10,
        "unit": "px",
        "default": 20
      },
      {
        "type": "paragraph",
        "content": "t:sections.section.settings.desktop.content"
      },
      {
        "id": "padding_top_desktop",
        "type": "range",
        "label": "t:sections.section.settings.top_pad.label",
        "min": 0,
        "max": 60,
        "step": 10,
        "unit": "px",
        "default": 40
      },
      {
        "id": "padding_bottom_desktop",
        "type": "range",
        "label": "t:sections.section.settings.bottom_pad.label",
        "min": 0,
        "max": 60,
        "step": 10,
        "unit": "px",
        "default": 40
      },
      {
        "id": "margin_bottom_desktop",
        "type": "range",
        "label": "t:sections.section.settings.bottom_margin.label",
        "min": 0,
        "max": 60,
        "step": 10,
        "unit": "px",
        "default": 40
      },
      {
        "id": "padding_border",
        "type": "checkbox",
        "label": "t:sections.section.settings.border.label",
        "default": true
      },
      {
        "type": "header",
        "content": "t:sections.sub_footer.name"
      },
      {
        "type": "checkbox",
        "id": "enable_languages",
        "label": "t:sections.enable_language.label",
        "default": true,
        "info": "t:sections.enable_language.info"
      },
      {
        "type": "checkbox",
        "id": "enable_multiple_currencies",
        "label": "t:sections.enable_country_region.label",
        "default": true,
        "info": "t:sections.enable_country_region.info"
      },
      {
        "type": "richtext",
        "id": "body",
        "label": "t:sections.text.label"
      }, 
      {
        "type": "checkbox",
        "id": "display_payments",
        "label": "t:sections.show_payment.label"
      },
      {
        "id": "section_color_sub",
        "type": "color",
        "label": "t:sections.text.color"
      },
      {
        "id": "section_color_sub_hover",
        "type": "color",
        "label": "t:sections.text.hover"
      },
      {
        "id": "background_sub",
        "type": "color",
        "label": "t:sections.section.settings.background_color.label"
      },
      {
        "id": "background_gradient_sub",
        "type": "color_background",
        "label": "t:sections.section.settings.background_gradient.label"
      },
      {
        "type": "paragraph",
        "content": "t:sections.section.settings.mobile.content"
      },
      {
        "id": "padding_top_mobile_sub",
        "type": "range",
        "label": "t:sections.section.settings.top_pad.label",
        "min": 0,
        "max": 60,
        "step": 10,
        "unit": "px",
        "default": 20
      },
      {
        "id": "padding_bottom_mobile_sub",
