{% if page.metafields.custom.offers_collections !=blank %}
  <section class="offer-collection margin-30">
    <div class="container clearfix">

      {% if page.metafields.custom.offer_collection_heading !=blank %}
        <div class="twelve text-center offerHead">
          <h2>{{ page.metafields.custom.offer_collection_heading }}</h2>
        </div>
      {% endif %}

      <div class="tab-body divided_col">
        {% assign offercollection = page.metafields.custom.offers_collections %}
        {% assign collectionMaincontainer = offercollection | split: "::" %}
        {%- for technical_details in collectionMaincontainer %}
          {% assign collectionSubcontainer = technical_details | split: "|" %}
          <div class="three">
            <div class="categoryImg">
              <a href="{{ collectionSubcontainer[1] }}">
                <img src="{{ collectionSubcontainer[0] }}" alt="" width="100%"></a>
            </div>
          </div>
        {% endfor %}
      </div>

    </div>

  </section>

{% endif %}

