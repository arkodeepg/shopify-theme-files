{%- assign releases = collection.metafields.custom.collectionslider1new -%}
{% assign collectionMaincontainer = releases | split: '::' %}
{% assign collectionMaincontainerSize = collectionMaincontainer | size %}

<style>
  /* .collection-circle_cont:not(.glider) {
    display: none;
  }

  .collection-circle_cont svg:not([aria-disabled]) {
    display: none;
  }

  .controlbtn.disabled {
    opacity: 0.4;
