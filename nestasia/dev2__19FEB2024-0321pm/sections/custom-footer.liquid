{%- assign blocks = false -%}
{% if section.settings.use_block_img %}
  {%- assign blocks = true -%}
{% else %}
  {% for block in section.blocks %}
    {% if section.blocks.size > 0 %}
      {%- assign blocks = true -%}
    {% endif %}
  {% endfor %}
{% endif %}
{%- assign footerMenuCount = 0 -%}
{% assign published_locales = false %}
{% assign enabled_currencies = false %}
{% if shop.published_locales.size > 1 and section.settings.enable_locales %}
  {% for locale in shop.published_locales %}
    {% if locale.name == request.locale.name %}
      {% capture locale_name %}{{ locale.name }}{% endcapture %}
    {% endif %}
    {% if forloop.first %}
      {% capture locale_size %}{{ locale.endonym_name | size }}{% endcapture %}
    {% endif %}
  {% endfor %}
  {% assign published_locales = true %}
{% endif %}
{% if shop.enabled_currencies.size > 1 and section.settings.enable_multiple_currencies -%}
  {%- assign enabled_currencies = true -%}
{%- endif %}

<div
  data-section-id="{{ section.id }}"
  data-section-type="footer-section"
  data-multi="{% if enabled_currencies or published_locales and locale_name != blank %}true{% else %}false{% endif %}"
  class="clearfix custom-footer-main"
  style="background-color: {{ section.settings.bg_color }};"
>
  {% if blocks %}
    <div class="container clearfix{% if section.settings.horizontal_content_alignment %} table-center{% endif %}">
      <div
        {% if section.settings.horizontal_content_alignment %}
          class="center"
        {% endif %}
      >
        {% if section.settings.use_block_img %}
          <div class="tab-body table-center footer-logo">
            <div class="two-half brands top bottompad">
              {% if section.settings.block_img != blank %}
                {%- capture alt -%}{% if section.settings.block_img.alt != blank %}{{ section.settings.block_img.alt }}{% else %}{{ section.settings.block_img | split: '/' | last | replace: '-', ' ' | replace: '_', ' ' | split: '.' | first | capitalize }}{% endif %}{%- endcapture -%}
                <a href="{{ shop.url }}" title="{{ shop.name | escape }}">
                  <img
                    src="{{section.settings.block_img |  image_url }}"
                    alt="{{alt}}"
                    id="{{section.settings.block_img.id}}"
                    width="{{ section.settings.block_img.width }}"
                    height="{{ section.settings.block_img.height }}"
                    class="footer-logo_img"
                  >
                  {% comment %} img = {{ block.settings.block_img | img_url: 'master' }} - {{ block.settings.logo_img_width }} {% endcomment %}
                  {% comment %} {%- render 'image-load', img_src: block.settings.block_img, size: block.settings.logo_img_width, id: block.settings.block_img.id, alt: alt -%} {% endcomment %}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
          </div>
        {% endif %}

        {% for block in section.blocks %}
          {%- assign block_width = block.settings.block_width -%}
          {% case block_width %}
            {% when '2' %}
              {%- assign block_width = 'two-half' -%}
              {%- assign size = 200 -%}
            {% when '3' %}
              {%- assign block_width = 'three' -%}
              {%- assign size = 300 -%}
            {% when '4' %}
              {%- assign block_width = 'four' -%}
              {%- assign size = 400 -%}
            {% when '6' %}
              {%- assign block_width = 'six' -%}
              {%- assign size = 600 -%}
            {% when '8' %}
              {%- assign block_width = 'eight' -%}
              {%- assign size = 800 -%}
            {% when '9' %}
              {%- assign block_width = 'nine' -%}
              {%- assign size = 900 -%}
            {% when '10' %}
              {%- assign block_width = 'ten' -%}
              {%- assign size = 1000 -%}
            {% when '12' %}
              {%- assign block_width = 'twelve' -%}
              {%- assign size = 1200 -%}
          {% endcase %}

          {% case block.type %}
            {% when 'content' %}
              {% if block.settings.title == blank and block.settings.body == blank %}
                {%- assign section_onboarding = true -%}
              {% else %}
                {%- assign section_onboarding = false -%}
              {% endif %}
              {%- assign body_first = '' -%}
              {%- assign body_last = '' -%}
              <div
                class="{{ block_width }} top {{ block.settings.text_alignment}} relative bottompad-half footer_item"
                {{ block.shopify_attributes }}
              >
                {% if section_onboarding %}
                  <h4 class="h5">{{ 'homepage.onboarding.no_title' | t }}</h4>
                  <p>{{ 'homepage.onboarding.no_block_body' | t }}</p>
                {% else %}
                  {% if block.settings.title != blank %}
                    <h4 class="h5">{{ block.settings.title }}</h4>
                  {% endif %}
                  {% if block.settings.body != blank %}
                    {%- assign body_first = block.settings.body | split: '</p>' | first -%}
                    {%- assign body_last = block.settings.body | remove: body_first | remove_first: '</p>' -%}
                    {{ body_first }}
                    {% if body_last != blank %}
                      <div class="open-container">
                        <a
                          href="javascript:void(0)"
                          class="open open-btn open-{{ section.id }}"
                          title="{{ 'collections.general.open' | t }}"
                          aria-controls="content-{{ block.id }}"
                          role="button"
                          aria-label="{{ 'collections.general.open' | t }}"
                          ><span class="icon icon-plus btn text-center"></span
                        ></a>
                        <div id="content-{{ block.id }}" class="open-slide">
                          {{ body_last }}
                        </div>
                      </div>
                    {% endif %}
                  {% endif %}
                {% endif %}
              </div>

            {% when 'menu' %}
              {%- assign footerMenuCount = footerMenuCount | plus: 1 -%}
              {% if block.settings.title == blank
                and block.settings.body == blank
                and block.settings.menu_1 == blank
                and block.settings.menu_2 == blank
              %}
                {%- assign section_onboarding = true -%}
              {% else %}
                {%- assign section_onboarding = false -%}
              {% endif %}
              {%- assign menu_1 = block.settings.menu_1 -%}
              {%- assign menu_2 = block.settings.menu_2 -%}
              {%- assign body_first = '' -%}
              {%- assign body_last = '' -%}
              <div
                class="{{ block_width }} top {{ block.settings.text_alignment }} relative bottompad-half footer_item"
                {{ block.shopify_attributes }}
              >
                {% if block.settings.menu_img != blank %}
                  <img
                    class="lazy"
                    loading="lazy"
                    data-src="{{ block.settings.menu_img | img_url: 'master' }}"
                    class="menu_logo"
                    alt=""
                  >
                {% endif %}

                {% if section_onboarding or block.settings.title != blank or block.settings.body != blank %}
                  {% if section_onboarding and block.settings.menu_img == blank %}
                    <h4 class="h5">{{ 'homepage.onboarding.no_title' | t }}</h4>
                    <p>{{ 'homepage.onboarding.no_block_body' | t }}</p>
                  {% else %}
                    <div class="footer-menu-title_cont">
                      {% if block.settings.title != blank %}
                        <h4 class="footer-menu-title disp-footer">{{ block.settings.title }}</h4>
                      {% endif %}
                      <div class="footer-icon onlymobile"></div>
                    </div>
                    {% if block.settings.body != blank %}
                      {%- assign body_first = block.settings.body | split: '</p>' | first -%}
                      {%- assign body_last = block.settings.body | remove: body_first | remove_first: '</p>' -%}
                      {{ body_first }}
                    {% endif %}
                  {% endif %}
                {% endif %}
                {%- assign hide1 = false -%}
                {%- assign hide2 = false -%}
                {% if linklists[menu_1].links.size > 0 %}
                  {%- assign hide1 = true -%}
                {% elsif linklists[menu_2].links.size > 0 %}
                  {%- assign hide2 = true -%}
                {% endif %}
                {% unless section_onboarding or block.settings.title != blank or block.settings.body != blank %}
                  <h5 span class="desktop-hide footer-menu-title" data-size="{{linklists[menu_1].links.size}}">
                    {% if linklists[menu_1].links.size > 0 and linklists[menu_2].links.size > 0 %}
                      {{ linklists[menu_1].title }} &amp; {{ linklists[menu_2].title }}
                    {% elsif linklists[menu_1].links.size > 0 %}
                      {{ linklists[menu_1].title }}
                    {% elsif linklists[menu_2].links.size > 0 %}
                      {{ linklists[menu_2].title }}
                    {% endif %}
                  </h5>
                {% endunless %}

                <div class="open-container">
                  {% if linklists[menu_1].links.size > 0 or linklists[menu_2].links.size > 0 or body_last != blank %}
                    <a
                      href="javascript:void(0)"
                      class="open open-btn open-{{ section.id }}{% if footerMenuCount == 1 %} active{% endif %}"
                      title="{{ 'collections.general.open' | t }}"
                      aria-controls="menu-{{ block.id }}"
                      role="button"
                      aria-label="{{ 'collections.general.open' | t }}"
                      ><span class="icon icon-plus text-center"></span
                    ></a>
                  {% endif %}
                  <div
                    id="menu-{{ block.id }}"
                    class="open-slide{% if footerMenuCount == 1 %} active{% endif %}"
                    {% if footerMenuCount == 1 %}
                      style="display: block;"
                    {% endif %}
                  >
                    {% if body_last != blank %}{{ body_last }}{% endif %}
                    {% if linklists[menu_1].links.size > 0 %}
                      <div class="footer-menu{% if linklists[menu_2].links.size > 0 %} six negative-left bottompad-half{% endif %} first">
                        {% if block.settings.menu_img == blank %}
                          <h5 class="footer-menu-title  {% if block.settings.title != blank or block.settings.body != blank %}desktop-hide{% endif %}{% if hide1 %} mobile-hide{% else %} dual-titles{% endif %}">
                            {{ linklists[menu_1].title }}
                          </h5>
                        {% endif %}
                        <ul class="footer-menu_ul">
                          {% for link in linklists[menu_1].links %}
                            <li>
                              <a class="footer-menu-item" href="{{ link.url }}">{{ link.title }}</a>
                            </li>
                          {% endfor %}
                        </ul>
                      </div>
                    {% endif %}
                    {% if linklists[menu_2].links.size > 0 %}
                      <div class="footer-menu{% if linklists[menu_1].links.size > 0 %} six negative-right last{% else %} first{% endif %}">
                        <h5 class="footer-menu-title {% if block.settings.title != blank or block.settings.body != blank %}desktop-hide{% endif %}{% if hide2 %} mobile-hide{% else %} dual-titles{% endif %}">
                          {{ linklists[menu_2].title }}
                        </h5>
                        <ul>
                          {% for link in linklists[menu_2].links %}
                            <li class="footer-menu-item">
                              <a href="{{ link.url }}">{{ link.title }}</a>
                            </li>
                          {% endfor %}
                        </ul>
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>

            {% when 'image' %}
              <div
                class="{{ block_width }} top {{ block.settings.text_alignment }} img bottompad"
                {{ block.shopify_attributes }}
              >
                {% if block.settings.block_img != blank %}
                  {%- capture alt -%}{% if block.settings.block_img.alt != blank %}{{ block.settings.block_img.alt }}{% else %}{{ block.settings.block_img | split: '/' | last | replace: '-', ' ' | replace: '_', ' ' | split: '.' | first | capitalize }}{% endif %}{%- endcapture -%}
                  <img
                    src="{{block.settings.block_img |  image_url: width:block.settings.logo_img_width }}"
                    alt="{{alt}}"
                    id="block.settings.block_img.id"
                  >
                  {% comment %} {%- render 'image-load', img_src: block.settings.block_img, size: block.settings.logo_img_width, id: block.settings.block_img.id, alt: alt -%} {% endcomment %}
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>

            {% when 'social' %}
              {% if block.settings.title == blank
                and block.settings.body == blank
                and block.settings.include_newsletter == false
                and block.settings.include_social == false
              %}
                {%- assign section_onboarding = true -%}
              {% else %}
                {%- assign section_onboarding = false -%}
              {% endif %}
              <div
                class="{{ block_width }} top {{ block.settings.text_alignment }} custom-footer-social bottompad-half"
                {{ block.shopify_attributes }}
              >
                {% if section_onboarding or block.settings.title != blank or block.settings.body != blank %}
                  <div class="inline-container">
                    {% if section_onboarding %}
                      <h4 class="h5 footer-menu-title">{{ 'homepage.onboarding.no_title' | t }}</h4>
                      <p>{{ 'homepage.onboarding.no_block_body' | t }}</p>
                    {% else %}
                      {% if block.settings.title != blank %}
                        <h4 class="h5 footer-menu-title">{{ block.settings.title }}</h4>
                      {% endif %}
                      {% if block.settings.body != blank %}{{ block.settings.body }}{% endif %}
                    {% endif %}
                  </div>
                {% endif %}
                {% if block.settings.include_newsletter %}{%- render 'footer-newsletter' -%}{% endif %}
                {% if block.settings.include_social %}{%- render 'social-follow' -%}{% endif %}

                {% if block.settings.contact %}
                  <div class="contact">
                    <h4 class="h5 footer-menu-title">{{ block.settings.contact_heading }}</h4>
                    <ul>
                      <li>
                        <a href="mailto:info@nestasia.in"
                          ><img
                            class="lazy"
                            loading="lazy"
                            data-src="https://cdn.shopify.com/s/files/1/2690/0106/files/footer_email_icon.svg?v=1672819857"
                            alt=""
                          >
                          info@nestasia.in</a
                        >
                      </li>
                      <li>
                        <a href="tel:9903504754"
                          ><img
                            class="lazy"
                            loading="lazy"
                            data-src="https://cdn.shopify.com/s/files/1/2690/0106/files/footer_whatsapp_icon.svg?v=1672819857"
                            alt=""
                          >
                          +91 9903504754</a
                        >
                      </li>
                    </ul>
                  </div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
  <div class="payment_bar">
    <div class="container">
      <ul>
        <li>We Accept</li>
        <li>
          <img
            class="lazy"
            loading="lazy"
            data-src="https://cdn.shopify.com/s/files/1/2690/0106/files/visa_icon.svg?v=1672825343"
            alt=""
          >
        </li>
        <li>
          <img
            class="lazy"
            loading="lazy"
            data-src="https://cdn.shopify.com/s/files/1/2690/0106/files/master_icon.svg?v=1672825343"
            alt=""
          >
        </li>
        <li>
          <img
            class="lazy"
            loading="lazy"
            data-src="https://cdn.shopify.com/s/files/1/2690/0106/files/rupay_icon.svg?v=1672825343"
            alt=""
          >
        </li>
        <li>
          <img
            class="lazy"
            loading="lazy"
            data-src="https://cdn.shopify.com/s/files/1/2690/0106/files/paytm_icon.svg?v=1672825343"
            alt=""
          >
        </li>
        <li class="pay_more">and more..</li>
      </ul>
    </div>
  </div>
  <div class="sub-footer{% if section.settings.horizontal_content_alignment %} text-center{% endif %} {% if section.settings.font_color %}white {% endif %}">
    <div class="container">
      <div class="{% if blocks == false %} toppad{% endif %}">
        {% if published_locales or enabled_currencies %}
          <div class="product-loop{% if section.settings.horizontal_content_alignment %} center{% endif %}">
            {% form 'localization', id: 'localization_form-footer', class: 'currency-selector' %}
              {% if published_locales and locale_name != blank %}
                <h4 class="hidden bottompad-quarter">{{ 'general.language.locale' | t }}</h4>
                <span class="form auto-width new-select currencies">
                  <select class="hidden" name="locale_code" aria-hidden="true" tabindex="-1">
                    {% if locale_name == blank %}
                      <option value="" selected="true">{{ 'general.language.change' | t }}</option>
                    {% endif %}
                    {% for locale in form.available_locales %}
                      <option
                        value="{{ locale.iso_code }}"
                        {% if locale.iso_code == form.current_locale.iso_code %}
                          selected="true"
                        {% endif %}
                      >
                        {{ locale.endonym_name }}
                      </option>
                    {% endfor %}
                  </select>
                  <span class="select">
                    <a
                      class="styledSelect currencies"
                      href="javascript:void(0)"
                      title="{{ 'general.language.locale' | t }}"
                      data-multi="locale"
                      ><small>
                        {%- if locale_name == blank -%}
                          {{- 'general.language.change' | t -}}
                        {%- else -%}
                          {{- locale_name -}}
                        {%- endif -%}
                      </small></a
                    >
                    <ul
                      class="options locale-width unformatted"
                      aria-hidden="true"
                      aria-label="{{ 'layout.general.nav_sub' | t }}"
                    >
                      {% for locale in form.available_locales %}
                        <li>
                          <a
                            href="javascript:void(0)"
                            data-multi="locale"
                            data-code="{{ locale.iso_code }}"
                            data-footer_symbol="{{ locale.endonym_name }}"
                            data-header_symbol="{{ locale.iso_code | upcase }}"
                            title="{{ locale.endonym_name | escape }}"
                            ><small>{{ locale.endonym_name }}</small></a
                          >
                        </li>
                      {% endfor %}
                    </ul>
                  </span>
                </span>
              {% endif %}

              {% if enabled_currencies %}
                <h4 class="hidden bottompad-quarter">{{ 'general.language.currency' | t }}</h4>
                <span class="form auto-width new-select currencies">
                  <select class="hidden" name="currency_code" aria-hidden="true" tabindex="-1">
                    {% for currency in form.available_currencies %}
                      <option
                        value="{{ currency.iso_code }}"
                        {% if currency.iso_code == form.current_currency.iso_code %}
                          selected="true"
                        {% endif %}
                      >
                        {{ currency.iso_code }}
                        {{ currency.symbol }}
                      </option>
                    {% endfor %}
                  </select>
                  <span class="select">
                    <a
                      class="styledSelect currencies"
                      href="javascript:void(0)"
                      title="{{ 'general.language.currency' | t }}"
                      data-multi="currency"
                    >
                      {%- for currency in form.available_currencies -%}
                        {%- if currency.iso_code == form.current_currency.iso_code -%}
                          <small>{{ currency.iso_code }}</small> {{ currency.symbol -}}
                        {%- endif -%}
                      {%- endfor -%}
                    </a>
                    <ul class="options unformatted" aria-hidden="true" aria-label="{{ 'layout.general.nav_sub' | t }}">
                      {% for currency in form.available_currencies %}
                        <li>
                          <a
                            href="javascript:void(0)"
                            data-multi="currency"
                            data-code="{{ currency.iso_code }}"
                            data-footer_symbol="{{ currency.iso_code }} {{ currency.symbol }}"
                            data-header_symbol="{{ currency.iso_code }} {{ currency.symbol }}"
                            title="{{ currency.name | escape }}"
                            ><small>{{ currency.iso_code }}</small> {{ currency.symbol -}}
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  </span>
                </span>
              {% endif %}
            {% endform %}
          </div>
        {% endif %}

