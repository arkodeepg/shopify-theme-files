            "label": "Text bold Checkbox",
            "default":false
            },
             {
            "type": "text",
            "id": "cardTextHead",
            "label": "Under Image Heading"
            },
            {
            "type": "text",
            "id": "cardTextSubhead",
            "label": "Under Image Sub-Heading"
            },
            {
            "type": "text",
            "id": "cardTextAtag",
            "label": "Under Image See More Text"
