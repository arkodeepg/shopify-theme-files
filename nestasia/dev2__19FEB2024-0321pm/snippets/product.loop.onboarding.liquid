<div class="product animate {% if settings.borders_enable %}borders {% endif %}{{ block_width }} brands animate-loop-{{ forloop_index0 }}{% if settings.quick_collection_hover %} hover{% endif %}">
  <div class="product-border{% if settings.borders_enable and section.settings.include_color != 'color-none' %} product-border-background{% endif %} {% if section.settings.sub_text_alignment %}{{ section.settings.sub_text_alignment }}{% else %}{{ settings.text_alignment }}{% endif %}">
    <div class="product-thumb-container">
      <div class="product-thumb">
        {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    </div>
    <div class="product-details">
      <div class="product-title">        
        <h5>
          {{ 'homepage.onboarding.product_title' | t }}
        </h5>
      </div>
      {% if settings.vendor_enable %}
      <p class="product-logistics">
        <span class="vendors">
          {{ 'homepage.onboarding.product_vendor' | t }}
        </span>
      </p>
      {% endif %}
      <div class="product-price">
        <h6>{% if settings.currency_enable %}{{ 1999 | money_with_currency }}{% else %}{{ 1999 | money }}{% endif %} | <del>{% if settings.currency_enable %}{{ 2499 | money_with_currency }}{% else %}{{ 2499 | money }}{% endif %}</del></h6>
      </div>
      <span class="purchase">
        <span class="button-common">
          <span class="btn auto-full-width">{% if settings.quick_view_enable %}{{ 'products.general.quick' | t }}{% else %}{{ 'products.product.add_to_cart' | t }}{% endif %}</span>
        </span>
      </span>
    </div>
  </div>
</div>